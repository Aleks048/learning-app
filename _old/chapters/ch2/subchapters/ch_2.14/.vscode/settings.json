                // },
                {
                    "match": "(_toc|_con).tex",
                    "cmd": "${BOOKS_ON_FILE_SAVE_PATH}/s_onTexFileSave.sh ${file} ${fileDirname}"
                },
                // {
                //     "match": "ImagesAndLinks.tex",
                //     "cmd": "source ${HOME}/.zprofile && cd $BOOKS_PROCESS_TEX_PATH/math_excercises/ && python3 create_excercises_tex.py ${file}"
